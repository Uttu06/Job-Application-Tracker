rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Common function to check if the user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Common function to check if the user is the owner of the file
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // User documents (resumes, cover letters, etc.)
    match /users/{userId}/documents/{document=**} {
      allow read: if isOwner(userId);
      allow write: if isOwner(userId);
    }
    
    // Company logos
    match /companies/{companyId}/logo {
      allow read: if true; // Public read access for logos
      allow write: if isAuthenticated(); // Only authenticated users can upload logos
    }
    
    // User profile pictures
    match /users/{userId}/profile-picture {
      allow read: if true; // Public read access for profile pictures
      allow write: if isOwner(userId); // Only the user can upload their profile picture
    }
  }
} 